#include <stdio.h>
void addition(int n1,int n2)
{
return(n1+n2);
}
void subtraction(int n1,int n2)
{
return(n1-n2);
}
void multiplication(int n1,int n2)
{
return(n1*n2);
}
void division(int n1,int n2)
{
if(n2==0)
{
printf("the denominator is zero division cannot be done");
}
else
{
return(n1/n2);
}
}

int main
{
printf("enter two numbers:");
scanf(%d,%d,&n1,&n2);
res=addition(n1,n2);
printf("result of addition is %d",res);
res=subtraction(n1,n2);
printf("result of subtraction is %d",res);
res=multiplicaion(n1,n2);
printf("result of multiplication is %d",res);
res=division(n1,n2);
printf("result of division is %d",res);
}
